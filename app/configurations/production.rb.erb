module <%= @name %>

  module Configurations

    class Production < Default

      database :host => 'localhost', :adapter => 'mysql', :database => '<%= @name.downcase %>',
        :user => 'root', :password => ''

      reloadable []

      log :level => :error,
        :output => ( :log / "waves.#{$$}" ),
        :rotation => :weekly

      host '0.0.0.0'

      port 80

      handler ::Rack::Handler::Mongrel, :Host => host, :Port => port
      # handler ::Rack::Handler::WEBrick, :BindAddress => host, :Port => port
      # handler ::Rack::Handler::Thin, :Host => host, :Port => port

      # 'deps' lets you easily check the environment for expected dependencies.
      # See configurations/dependecies.rb for more info.
      deps <%= @name %>::Configurations::Dependencies.deps

      application do
        use ::Rack::Static, :urls => [ '/css/', '/javascript/' ], :root => 'public'
        run ::Waves::Dispatchers::Default.new
      end

    end
  end
end
