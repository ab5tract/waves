#!/usr/bin/env ruby

# WARNING: This is a bit of mess, but is needed to work with older versions of gem ...

require 'rubygems'
waves = [
    (WAVES if defined? WAVES), ENV[ 'WAVES'], './waves'
].compact.map { |dir| File.join(dir, 'lib') }.find(&File.method(:directory?))
if waves
    $: << waves
    waves = File.join( waves, 'waves' )
else
    waves = 'waves'
end
require waves
require 'commands/waves-console'
